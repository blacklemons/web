<!DOCTYPE html>
<html>
    <head>
        <script>
            function popup(message){
                location.href = "/board/content?board_No="+message;
            }
            function logout(){
                location.href = "/login/logout";
            }
        </script>
        <%- include("./head.ejs") %>
    </head>
    <body>
        <%- include("./nav.ejs") %>
        <div class="container" style="margin-top:20px;">
            <div align="right">
                <button onclick="logout()" class="btn btn-danger">logout</button>
            </div>
            <div style="margin-top:20px;">
                <h2>
                    게시판
                </h2>
                <table class="table table-hover">
                    <tr align="center">
                        <th>번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>최종 수정일</th>
                    </tr>

                    <% if(boards.length==0){ %>
                        <tr align="center">
                            <td colspan="4">해당 게시판에 글이 없습니다</td>
                        </tr>
                    <% }else{ %>

                    <% for(var i=0; i < boards.length; i++){ %>
                        <tr onclick="popup('<%=boards[i].No%>')" align="center">
                            <th><%=boards[i].No%></th>
                            <th><%=boards[i].title%></th>
                            <th><%=boards[i].author%></th>
                            <th><%=boards[i].date%></th>
                        </tr>
                    <% }} %> 
                </table>
            
                <div align="right">
                    <button onclick="javascript:location.href='/board/write'" class="btn btn-primary">write</button>
                </div>
            </div>
        </div>
    </body>
</html>